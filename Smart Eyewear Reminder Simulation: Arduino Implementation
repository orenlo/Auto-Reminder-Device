// Pin definitions
const int glassesPin = 2;      // Pin for simulating presence of glasses (LED)
const int buttonPin = 3;       // Pin for simulating going out of the house (push button)
const int notificationPin = 4; // Pin for simulating notification (LED)

bool glassesPresent = false;   // Variable to store glasses presence status

void setup() {
  pinMode(glassesPin, OUTPUT);
  pinMode(buttonPin, INPUT_PULLUP);
  pinMode(notificationPin, OUTPUT);
  
  // Initialize serial communication
  Serial.begin(9600);
}

void loop() {
  // Check if the button is pressed (simulating going out of the house)
  if (digitalRead(buttonPin) == LOW) {
    // Simulate going out of the house
    Serial.println("You are going out of the house.");
    delay(1000); // Simulate time to go out
    
    // Simulate checking for glasses presence
    checkGlassesPresence();

    // If glasses are not present, simulate sending a notification
    if (!glassesPresent) {
      Serial.println("You forgot your glasses!");
      digitalWrite(notificationPin, HIGH); // Turn on notification LED
      delay(1000); // Simulate notification delay
      digitalWrite(notificationPin, LOW);  // Turn off notification LED
    }
    else {
      Serial.println("You have your glasses with you.");
    }
  }
  else {
    Serial.println("You are staying at home.");
    delay(1000); // Simulate staying at home
  }
}

// Function to simulate checking for glasses presence
void checkGlassesPresence() {
  // Simulate glasses presence using a random condition
  glassesPresent = random(2);
  // Update the glasses LED accordingly
  digitalWrite(glassesPin, glassesPresent ? HIGH : LOW);
}
